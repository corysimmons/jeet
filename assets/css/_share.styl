.share
  column(1)
  position relative
  text-align center
  background grey
  padding (xl-padding-block - 17) 0
  .contained
    column(5/6, offset: 1/12)
    +above(xl-snap)
      width 100%
      max-width 100%
      margin-left auto
  .focused-example
    padding-top xl-padding-block
    &:before
      content 'center(420px)'
      line-height 175px
.centered
  center(420px)
.mt-share-inline-circle
  size(80px)
  display inline-block
  margin-top med-padding-block - 6
  border-radius 50%
  img
    size(80px)
    border 0px
.mt-google
  background-color rgb(221, 75, 57)
  &:hover
    background-color rgb(225, 95, 79)
.mt-twitter
  margin 0 20px
  background-color rgb(0, 172, 238)
  &:hover
    background-color rgb(8, 187, 255)
.mt-facebook
  background-color rgb(59, 89, 152)
  &:hover
    background-color rgb(66, 100, 170)
